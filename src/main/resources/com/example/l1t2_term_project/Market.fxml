<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.l1t2_term_project.Controller.MarketController">
    <AnchorPane fx:id="mainMenu" prefHeight="500.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
         <HBox alignment="CENTER" layoutX="270.0" layoutY="109.0" spacing="20.0">
            <children>
                <TextField fx:id="searchField" prefHeight="25.0" prefWidth="180.0" promptText="Search by Name">
                    <effect>
                        <DropShadow />
                    </effect>
                </TextField>
                <Button mnemonicParsing="false" onAction="#openFilter" prefHeight="25.0" prefWidth="70.0" text="Filter" />
               <Button mnemonicParsing="false" onAction="#searchPlayers" prefHeight="25.0" prefWidth="70.0" text="Search" />
            </children>
         </HBox>
         <TableView fx:id="playerTable" layoutX="204.0" layoutY="182.0" prefHeight="300.0">
           <columns>
             <TableColumn editable="false" prefWidth="150.0" resizable="false" text="Name">
                 <cellValueFactory>
                     <PropertyValueFactory property="name" />
                 </cellValueFactory>
             </TableColumn>
             <TableColumn editable="false" resizable="false" text="Role">
                 <cellValueFactory>
                     <PropertyValueFactory property="role" />
                 </cellValueFactory>
             </TableColumn>
             <TableColumn editable="false" resizable="false" text="Nationality">
                 <cellValueFactory>
                     <PropertyValueFactory property="nationality" />
                 </cellValueFactory>
             </TableColumn>
             <TableColumn editable="false" resizable="false" text="Club">
                 <cellValueFactory>
                     <PropertyValueFactory property="team" />
                 </cellValueFactory>
             </TableColumn>
             <TableColumn editable="false" prefWidth="100.0" resizable="false" text="Value">
                 <cellValueFactory>
                     <PropertyValueFactory property="value" />
                 </cellValueFactory>
             </TableColumn>
           </columns>
         </TableView>
        </children>
    </AnchorPane>
   <VBox fx:id="filterBox" layoutX="150.0" layoutY="125.0" prefWidth="600.0" spacing="20.0" style="-fx-border-color: black; -fx-background-color: white;" visible="false">
      <children>
         <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="182.0" spacing="20.0">
            <children>
               <Label prefHeight="28.0" prefWidth="100.0" text="Positon">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
               <ComboBox fx:id="positionField" onAction="#setRoleField" prefWidth="150.0" visibleRowCount="5" />
               <ComboBox fx:id="roleField" prefWidth="150.0" visibleRowCount="5" />
            </children>
            <padding>
               <Insets left="65.0" />
            </padding>
         </HBox>
         <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="558.0" spacing="20.0">
            <children>
               <Label prefHeight="26.0" prefWidth="100.0" text="Nationality">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
               <ComboBox fx:id="nationField" prefWidth="150.0" visibleRowCount="5" />
            </children>
            <padding>
               <Insets left="65.0" />
            </padding>
         </HBox>
         <HBox alignment="CENTER_LEFT" layoutX="31.0" layoutY="81.0" prefHeight="30.0" prefWidth="558.0" spacing="20.0">
            <children>
               <Label prefHeight="26.0" prefWidth="100.0" text="Club">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
               <ComboBox fx:id="clubField" prefWidth="150.0" visibleRowCount="5" />
            </children>
            <padding>
               <Insets left="65.0" />
            </padding>
         </HBox>
         <HBox alignment="CENTER_LEFT" layoutX="31.0" layoutY="132.0" prefHeight="30.0" prefWidth="558.0" spacing="20.0">
            <children>
               <Label prefHeight="26.0" prefWidth="100.0" text="Value">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
               <TextField fx:id="minValueField" prefWidth="140.0" promptText="Minimum Value" />
               <Label text="-" />
               <TextField fx:id="maxValueField" prefWidth="140.0" promptText="Maximum Value" />
            </children>
            <padding>
               <Insets left="65.0" />
            </padding>
         </HBox>
         <HBox alignment="CENTER_LEFT" layoutX="31.0" layoutY="182.0" prefHeight="30.0" prefWidth="558.0" spacing="20.0">
            <padding>
               <Insets left="65.0" />
            </padding>
            <children>
               <Label prefHeight="26.0" prefWidth="100.0" text="Available">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
               <CheckBox fx:id="availabilityField" mnemonicParsing="false" selected="true" />
            </children>
         </HBox>
         <HBox alignment="CENTER" layoutX="31.0" layoutY="132.0" prefHeight="30.0" prefWidth="577.0" spacing="30.0">
            <children>
               <Button alignment="CENTER" cancelButton="true" contentDisplay="CENTER" layoutX="352.0" layoutY="12.0" mnemonicParsing="false" onAction="#setFilter" prefHeight="25.0" prefWidth="70.0" text="Save" />
               <Button alignment="CENTER" cancelButton="true" contentDisplay="CENTER" layoutX="306.0" layoutY="12.0" mnemonicParsing="false" onAction="#resetFilter" prefHeight="25.0" prefWidth="70.0" text="Reset" />
                <Button alignment="CENTER" cancelButton="true" contentDisplay="CENTER" mnemonicParsing="false" onAction="#cancelFilter" prefHeight="25.0" prefWidth="70.0" text="Cancel" />
            </children>
         </HBox>
      </children>
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
   </VBox>
   <HBox fx:id="playerShowBox" layoutX="150.0" layoutY="100.0" style="-fx-background-color: white;" visible="false">
      <children>
         <ImageView fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" />
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="150.0">
            <children>
               <Label fx:id="nameLabel" alignment="CENTER" prefHeight="26.0" prefWidth="86.0" text="Name">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
            </children>
         </VBox>
         <VBox alignment="CENTER" layoutX="310.0" layoutY="10.0" prefHeight="200.0" prefWidth="150.0">
            <children>
               <Button alignment="CENTER" cancelButton="true" contentDisplay="CENTER" mnemonicParsing="false" onAction="#cancelPlayerShow" prefHeight="25.0" prefWidth="70.0" text="Cancel" />
            </children>
         </VBox>
      </children>
   </HBox>
</AnchorPane>
