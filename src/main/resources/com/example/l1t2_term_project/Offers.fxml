<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.l1t2_term_project.Controller.OffersController">
   <children>
      <AnchorPane fx:id="tabAnchorPane" prefHeight="500.0" prefWidth="700.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
              <TabPane prefHeight="500.0" prefWidth="700.0">
                  <tabs>
                      <Tab text="Incoming Offers">
                          <VBox spacing="10" style="-fx-padding: 15;">
                              <TableView fx:id="incomingOffersTable" prefHeight="265.0" prefWidth="870.0">
                                  <columns>
                                      <TableColumn prefWidth="150" text="Player">
                                          <cellValueFactory>
                                    <PropertyValueFactory property="playerName" />
                                 </cellValueFactory>
                                      </TableColumn>
                                      <TableColumn prefWidth="150" text="From Club">
                                          <cellValueFactory>
                                    <PropertyValueFactory property="fromClub" />
                                 </cellValueFactory>
                                      </TableColumn>
                                      <TableColumn prefWidth="100" text="Offer Amount">
                                          <cellValueFactory>
                                    <PropertyValueFactory property="amount" />
                                 </cellValueFactory>
                                      </TableColumn>
                              <TableColumn prefWidth="150.0" text="Swap Offer" />
                                  </columns>
                              </TableView>
      
                                          <VBox fx:id="offerActions" prefHeight="152.0" prefWidth="870.0" spacing="10" style="-fx-padding: 10; -fx-background-color: #f5f5f5;" visible="false">
                                  <Label fx:id="selectedOfferLabel" style="-fx-font-weight: bold;" />
                                  <HBox prefHeight="66.0" prefWidth="850.0" spacing="50.0">
                                      <Button onAction="#acceptOffer" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Accept" />
                                      <Button onAction="#rejectOffer" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Reject" />
                                      <Button onAction="#showOfferScene" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Counter" />
                                  </HBox>
                              </VBox>
                          </VBox>
                      </Tab>
      
                                  <Tab text="Outgoing Offers">
                          <TableView fx:id="outgoingOffersTable" style="-fx-padding: 15;">
                              <columns>
                                  <TableColumn prefWidth="150" text="Player">
                                      <cellValueFactory>
                                 <PropertyValueFactory property="playerName" />
                              </cellValueFactory>
                                  </TableColumn>
                                  <TableColumn prefWidth="150" text="To Club">
                                      <cellValueFactory>
                                 <PropertyValueFactory property="toClub" />
                              </cellValueFactory>
                                  </TableColumn>
                                  <TableColumn prefWidth="100" text="Offer Amount">
                                      <cellValueFactory>
                                 <PropertyValueFactory property="amount" />
                              </cellValueFactory>
                                  </TableColumn>
                           <TableColumn prefWidth="150.0" text="Swap Offer" />
                              </columns>
                          </TableView>
                      </Tab>
                  </tabs>
              </TabPane>
         </children>
      </AnchorPane>
      <StackPane fx:id="makeOfferPane" layoutX="50.0" layoutY="75.0" prefHeight="350.0" prefWidth="600.0" visible="false" />
   </children>
</AnchorPane>
