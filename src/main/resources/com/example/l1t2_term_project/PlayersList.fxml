<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="500.0" maxWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.l1t2_term_project.Controller.PlayersListController">
   <children>
   
         <SplitPane fx:id="fullListDetails" dividerPositions="0.35" prefHeight="500.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <items>
   
               <TableView fx:id="playersTable" prefHeight="498.0" prefWidth="254.0" style="-fx-border-color: transparent;" stylesheets="@../../../styles/market.css">
               <columns>
                  <TableColumn fx:id="jerseyNumberCol" prefWidth="60.0" resizable="false" text="Jersey">
                     <cellValueFactory>
                        <PropertyValueFactory property="jerseyNumber" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="nameCol" prefWidth="150.0" text="Name">
                     <cellValueFactory>
                        <PropertyValueFactory property="name" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="positionCol" prefWidth="100" resizable="false" text="Position">
                     <cellValueFactory>
                        <PropertyValueFactory property="position" />
                     </cellValueFactory>
                  </TableColumn>
               </columns>
            </TableView>
   
      
               <VBox fx:id="fullPlayerDetails" alignment="TOP_CENTER" prefHeight="400.0" prefWidth="601.0" spacing="15.0" style="-fx-background-color: #f5f5f5;">
               <ImageView fx:id="playerImage" fitHeight="200" fitWidth="200" preserveRatio="true" />
               <VBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 20;">
                  <Label fx:id="playerName" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                  <Label fx:id="playerDetails" style="-fx-font-size: 14;" />
                  <Label fx:id="playerStats" style="-fx-font-size: 14;" />
               </VBox>
               <Button fx:id="playerSellButton" mnemonicParsing="false" onAction="#setSellMoney" stylesheets="@../../../styles/button.css" text="SELL">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
               </Button>
            </VBox>
         </items>
      </SplitPane>
   
      
         <VBox fx:id="finalSellBox" alignment="CENTER" prefHeight="500.0" prefWidth="900.0" spacing="25" style="-fx-background-color: #ffffff;" styleClass="new-vbox" stylesheets="@../../../styles/Club_detail.css" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <Label style="-fx-font-size: 25; -fx-text-fill: #000000;" text="Enter your Amount:" />
         <TextField fx:id="sellAmountField" promptText="Amount" style="-fx-pref-width: 200;" />
         <Button fx:id="finalSellButton" mnemonicParsing="false" onAction="#handleFinalSell" styleClass="sell-button" text="Add to Transfer List" />
         <Button mnemonicParsing="false" onAction="#returnToSquad" text="Return to Squad" />
      </VBox>
   </children>
</AnchorPane>
